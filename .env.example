# App
ENVIRONMENT=dev
SECRET_KEY=change-me
BASE_URL=http://localhost:8000

# Database (dev default: SQLite)
DATABASE_URL=sqlite:///./serendipity.db

# PostgreSQL example (docker-compose)
# DATABASE_URL=postgresql+psycopg://serendipity:serendipity@localhost:5432/serendipity

# Celery / Redis (only needed if ENVIRONMENT != dev)
REDIS_URL=redis://localhost:6379/0

# Google OAuth (recommended for production)
# When configured, password login is disabled and users are auto-provisioned on first login.
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_ALLOWED_DOMAIN=serendipitycapital.com

# Storage
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=.local_storage

# Optional S3-compatible settings (only used if STORAGE_BACKEND=s3)
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=serendipity-spend
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# Bootstrap admin user (created on first startup if set)
INIT_ADMIN_EMAIL=admin@example.com
INIT_ADMIN_PASSWORD=admin123
